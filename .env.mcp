# MCP Services Configuration
# This file contains non-sensitive configuration and sources secrets from .env.secrets

# IMPORTANT: Load sensitive information from .env.secrets
# Copy .env.secrets.template to .env.secrets and fill in your actual API keys
if [ -f ".env.secrets" ]; then
    source .env.secrets
    echo "✅ Loaded secrets from .env.secrets"
else
    echo "⚠️  Warning: .env.secrets not found. Copy .env.secrets.template to .env.secrets and add your API keys."
    # Fallback to placeholder values if secrets file doesn't exist
    export GITHUB_PERSONAL_ACCESS_TOKEN="your_github_token_here"
    export BRAVE_API_KEY="your_brave_api_key_here"
    export NOTION_TOKEN="your_notion_token_here"
fi

# Puppeteer Configuration
# Path to Chromium browser
export PUPPETEER_EXECUTABLE_PATH="/usr/bin/chromium-browser"

# Home Assistant Development MCP Servers
# Command execution for HA CLI and addon testing
export COMMANDS_SERVER_ENABLED=true

# Desktop Commander for file management and code editing
export DESKTOP_COMMANDER_ENABLED=true

# OpenAPI MCP for Home Assistant API integration
# Point to your Home Assistant instance
export HA_BASE_URL="http://supervisor/core"
export HA_OPENAPI_URL="http://supervisor/core/api/openapi.json"

# Node.js Sandbox for Lovelace card development
export NODE_SANDBOX_ENABLED=true

# Notion MCP for project management and documentation
# Notion Page ID (non-sensitive, can be public)
export NOTION_PAGE_ID="2202353b-33e4-8014-9b1f-d31d4cbb309d"
# Note: NOTION_TOKEN is loaded from .env.secrets
