{
  "name": "roo-ai-cleaning-assistant-card",
  "version": "2.0.0",
  "description": "Comprehensive Lovelace card for Roo AI Cleaning Assistant v2.0",
  "main": "dist/roo-card.js",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w --environment NODE_ENV:development",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "serve": "http-server dist -p 8080 -c-1",
    "clean": "rimraf dist"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card",
    "ai",
    "cleaning",
    "automation"
  ],
  "author": "Roo AI Cleaning Assistant",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sporebattyl/Aiclean.git"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-lit": "^1.8.3",
    "http-server": "^14.1.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-serve": "^2.0.2"
  },
  "dependencies": {
    "lit": "^2.7.5"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:lit/recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
